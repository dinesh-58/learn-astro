---
import BaseLayout from "../../layouts/BaseLayout.astro";

const allPosts = await Astro.glob("../posts/*.md");
const uniqueTags = [...new Set(allPosts.map(p => p.frontmatter.tags).flat())];
---
<style>
  a {
    color: #00539F;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style>

<BaseLayout pageTitle="Tags">
	<div class="tags">
		{uniqueTags.map(t => <p class="tag"><a href={`./${t}`}>{t}</a></p>)}
	</div>
</BaseLayout>
